@{
    ViewData["Title"] = "Explorar";
}

<div class="row">
    <div class="input-field col s8 offset-s2 l6 offset-l3 center-align">
        <div class="div input-field text-filtragem">
            <input id="first_name" type="text" class="validate">
            <label for="first_name">Encontrar um jogo sobre...</label>
        </div>
        <div class="div botao-filtragem">
            <a class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">search</i></a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 m6 l3">
        <div class="card">
            <div class="card-image">
                <img src="~/images/geografia.jpg">
            </div>
            <div class="card-content">
                <div class="center-align">
                    <span class="card-title">Nome do jogo</span>
                </div>
                <div>
                    <img src="~/images/sem-imagem.jpg" class="circle responsive-img z-depth-1">
                    <p class="nome-user">Wellisson</p>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/Explorar.css" />
