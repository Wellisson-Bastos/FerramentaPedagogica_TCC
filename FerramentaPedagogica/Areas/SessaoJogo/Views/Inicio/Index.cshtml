@model FerramentaPedagogica.Areas.SessaoJogo.Models.Inicio.InicioViewModel;

@{
    ViewData["Title"] = "Jogo";
}

@Html.HiddenFor(model => model.CodigoJogo)

<div class="row center-align">
    <div class="col s12">
        <h1>@Model.TituloJogo</h1>
    </div>
</div>
<div class="row center-align">
    <div class="col s12">
        <h2>Código da sessão: @Model.CodigoSessao</h2>
    </div>
</div>
<div class="row center-align">
    <div class="col s12">
        <h3>Acesse PlaquizGame.AzureWebSites.net/Jogar</h3>
    </div>
</div>
<div class="row center-align">
    <div class="col s12">
        <a id="btn-iniciar-jogo" class="waves-effect waves-light btn btn-large blue" data-ajax-url="@Url.Action("Index", "Contador", new { Sessao = Model.CodigoSessao, Pergunta = -1 })">
            Iniciar
            <i class="material-icons right">play_arrow</i>
        </a>
    </div>
</div>
<div class="row">
    <div class="col s12 loading">
        Aguardando jogadores
    </div>
</div>
<div class="row center-align">
    <div id="listagem-jogadores" class="col s12" data-ajax-url="@Url.Action("_ListagemJogadores", "Inicio", new { Sessao = Model.CodigoSessao })">

    </div>
</div>

<link rel="stylesheet" href="~/css/Sessao/Inicio/Inicio.css" />

@section scripts {
    <script src="~/js/Sessao/Inicio/Inicio.js"></script>
}

