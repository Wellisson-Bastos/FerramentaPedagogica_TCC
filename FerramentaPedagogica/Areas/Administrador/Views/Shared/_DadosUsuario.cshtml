@model FerramentaPedagogica.Areas.Administrador.Models.DadosPessoaisViewModel

<div class="modal-content">
    @using (Html.BeginForm("AtualizarDados", "Menu", FormMethod.Post, new { @id = "frmAtualizarDados" }))
    {
    <div class="col s12 l4 div-cadastro">
        <div class="row">
            <div class="col s12 center-align">
                <h2 class="titulo-form">Atualizar dados</h2>
            </div>
        </div>
        @Html.Hidden("UsuarioCodigo", Model.UsuarioCodigo)
        <div class="row">
            <div class="col s8 offset-s2">
                <div class="input-field">
                    @Html.LabelFor(Model => Model.Senha)
                    @Html.PasswordFor(Model => Model.Senha, new { id = "senha-cadastro" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s8 offset-s2">
                <div class="input-field">
                    @Html.LabelFor(Model => Model.ConfirmacaoSenha)
                    @Html.PasswordFor(Model => Model.ConfirmacaoSenha, new { id = "confirmar-senha", @class = "validate" })
                </div>
                @Html.ValidationMessageFor(model => model.ConfirmacaoSenha, "", new { @class = "text-error" })
            </div>
        </div>
        <div class="row">
            <div class="col s8 offset-s2">
                <span class="label-fake">
                    Foto de perfil
                </span>
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Arquivo</span>
                        <input type="file" id="img-usuario" name="img-usuario" accept=".png,.jpg" />
                        @Html.Hidden("FotoBase64", Model.FotoBase64)
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" name="text-foto">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s8 offset-s2 m7 offset-m3 center-align">
                <a id="botao-atualizar" class="waves-effect waves-light btn botoes-acoes green right">Confirmar</a>
                <a class="waves-effect waves-light btn botoes-acoes modal-close red right">Cancelar</a>
            </div>
        </div>
    </div>
    }
</div>
